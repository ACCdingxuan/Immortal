    <div style="display: flex;justify-content: center;align-items: center;margin-top: 2rem;height: 1000px;">
        <div class="form border" style="padding: 3rem;align-items: center;justify-content: center;width:50vw;">
            <p>
            <h1>註冊</h1>
            </p>
            <form action="regsuccess" method="post">
                <div class="mb-3">
                    信箱/E-mail
                    <p><input type="text" class="form-control" name="account" id="account"
                            placeholder="example@gmail.com" onkeyup="validateNull1(this)" /><span id="null1"></span></p>
                </div>
                <div class="mb-3">
                    密碼/Password
                    <p><input type="password" class="form-control" name="password" id="pw1" placeholder="請輸入密碼"
                            onkeyup="validateNull2(this)" /><span id="null2"></span>
                    </P>
                </div>
                <div class="mb-3">
                    確認密碼/Confirmed Password
                    <p><input type="password" class="form-control" id="pw2" onkeyup="validate()"
                            placeholder="請再次輸入密碼" /><span id="correct"></span></p>
                </div>
                <div class="mb-3">
                    姓名/Name
                    <p><input type="text" class="form-control" name="name" id="name" placeholder="楊祐昇"
                            onkeyup="validateNull3(this)" /><span id="null3"></span></p>
                </div>
                <div class="mb-3">
                    時辰/Birth
                    <p><input type="date" class="form-control" id="date" name="date"></p>

                </div>
                <div class="mb-3">
                    生肖/Zodiac
                    <p><select class="form-control" id="zodiac" name="zodiac">
                            <option value="">請選擇十二生肖</option>
                            <option value="rat">鼠</option>
                            <option value="ox">牛</option>
                            <option value="tiger">虎</option>
                            <option value="rabbit">兔</option>
                            <option value="dragon">龍</option>
                            <option value="snake">蛇</option>
                            <option value="horse">馬</option>
                            <option value="goat">羊</option>
                            <option value="monkey">猴</option>
                            <option value="rooster">雞</option>
                            <option value="dog">狗</option>
                            <option value="pig">豬</option>
                        </select></p>

                </div>
                <div class="mb-3">
                    年齡/Age
                    <p><input type="text" class="form-control" name="age" onkeyup="validateNum(this)"><span
                            id="num"></span></p>
                </div>
                <div class="mb-3">
                    性別/Sex
                    <p><select class="form-control" id="sex" name="sex">
                            <option value="">請選擇性別</option>
                            <option value="man">男</option>
                            <option value="woman">女</option>
                            <option value="other">其他</option>
                        </select></p>

                </div>
                <div class="mb-3">
                    住址/Address
                    <p><input type="text" class="form-control" id="address" name="address"
                            onkeyup="validateNull4(this)"><span id="null4"></span></p>
                </div>
                <div class="mb-3">
                    <p><input type="submit" value="註冊" id="submit" />
                        <input type="reset" value="重置" />
                    </p>
                </div>
        </div>
    </div>
    </form>
    <script>
        function validate() {
            var pw1 = document.getElementById("pw1").value;
            var pw2 = document.getElementById("pw2").value;
            if (pw1 == pw2) {
                document.getElementById("correct").innerHTML = "<font color='green'>兩次密碼相同</font>";
                document.getElementById("submit").disabled = false;
            }
            else {
                document.getElementById("correct").innerHTML = "<font color='red'>兩次密碼不相同</font>";
                document.getElementById("submit").disabled = true;
            }
        }
        function validateNum(obj) {
            var re = /^[0-9]*$/;
            if (!re.test(obj.value)) {
                document.getElementById("num").innerHTML = "<font color='red'>必須是數字</font>";
                document.getElementById("submit").disabled = true;
            }
            else if (obj.value == "") {
                document.getElementById("num").innerHTML = "<font color='red'>不得為空</font>";
                document.getElementById("submit").disabled = true;
            }
            else {
                document.getElementById("num").innerHTML = "<font color='green'>輸入格式正確</font>";
                document.getElementById("submit").disabled = false;
            }
        }
        function validateNull1(obj) {
            if (obj.value == "") {
                document.getElementById("null1").innerHTML = "<font color='red'>不得為空</font>";
                document.getElementById("submit").disabled = true;
            }
            else {
                document.getElementById("null1").innerHTML = "<font color='green'>V</font>";
                document.getElementById("submit").disabled = false;
            }
        }
        function validateNull2(obj) {
            if (obj.value == "") {
                document.getElementById("null2").innerHTML = "<font color='red'>不得為空</font>";
                document.getElementById("submit").disabled = true;
            }
            else {
                document.getElementById("null2").innerHTML = "<font color='green'></font>";
                document.getElementById("submit").disabled = false;
            }
        }
        function validateNull3(obj) {
            if (obj.value == "") {
                document.getElementById("null3").innerHTML = "<font color='red'>不得為空</font>";
                document.getElementById("submit").disabled = true;
            }
            else {
                document.getElementById("null3").innerHTML = "<font color='green'></font>";
                document.getElementById("submit").disabled = false;
            }
        }
        function validateNull4(obj) {
            if (obj.value == "") {
                document.getElementById("null4").innerHTML = "<font color='red'>不得為空</font>";
                document.getElementById("submit").disabled = true;
            }
            else {
                document.getElementById("null4").innerHTML = "<font color='green'></font>";
                document.getElementById("submit").disabled = false;
            }
        }

    </script>
